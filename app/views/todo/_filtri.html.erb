<% content_for :head do %>
	<%= csrf_meta_tag %>
<% end %>
<% form_for @todo, :method => :get, :url => { :controller => "todo" }, :remote => true do |f| %>
	<%#= f.label(:stato, " ", :class => "title_label") %>
	<%= f.collection_select :stato, filter_by_status, :cda_stato, :des_stato, {:include_blank => true,  :onChange => 'this.form.submit()'} %>
	<% if StatiSegnalazione.aperta?(@todo.stato) %>
		<%= f.label(:in_carico, "Solo in carico", :class => "title_label") %>
		<%= f.check_box :in_carico, { :onChange => 'this.form.submit()'} %>
	<% end %>
<% end %>
