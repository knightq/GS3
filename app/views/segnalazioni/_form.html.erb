<% if @segnalazione.errors.any? %>
	<% @segnalazione.errors.full_messages.each do |msg| %>
		<% flash[:error] = msg %>
	<% end %>
<% end %>

<%= form_for(@segnalazione) do |f| %>

  <div class="field">
    <%= f.label "Prodotto" %>
	<%= text_field_with_auto_complete @segnalazione, :cod_prodotto, {:class => "segnalazione_cod_prodotto"} %>
  </div>
  <div class="field">
    <%= f.label "Descrizione segnalazione" %> <%= f.text_area :des_segna %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>