<%= content_for :head do %>
<%= javascript_include_tag 'jquery.scrollTo' %>
<script type="text/javascript">
    function goToByScroll(idver){
        if (idver == null) {
            idver = '';
        }
        $('#content').animate({
            scrollTop: $("#" + idver).offset().top
        }, 'slow');
    }
</script>
<% end %>
<%
version_set ||= Array.new %>
<ul class="versioni">
    <% version_set.each do |version| %>
    <li>
        <a class="anchor_to" href="javascript:void(0)" onClick="goToByScroll('<%= version.id %>')"><%= version.cda_versione %>
        </a>
    </li>
    <% end %>
</ul>
