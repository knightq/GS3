<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <title><%= @content_for_title || "GS on Rails" %></title>
        <%= javascript_include_tag :defaults %>
        <%= javascript_include_tag 'jquery-1.4.2' %>
        <%= javascript_include_tag 'jquery.scrollTo' %>
        <%= javascript_include_tag 'jquery-ui-1.8.1.custom.min' %>
		<!-- Questa lib js va in conflitto con l'uploader -->
        <%= javascript_include_tag 'jquery.jqDock.min' unless params[:action] == 'new' %>

        <%= stylesheet_link_tag 'application' %>
        <%= stylesheet_link_tag 'button' %>
        <%= stylesheet_link_tag 'dock' %>
        <%= stylesheet_link_tag 'fontfaces' %>
        <%= stylesheet_link_tag 'gs' %>
        <%= stylesheet_link_tag 'menu' %>
        <%= stylesheet_link_tag 'jquery-ui-1.8.1.custom' %>
        <%= csrf_meta_tag %>
        <%= yield(:head) %>
    </head>

    <body>
	    <div id="banner">
	    	<!-- Titolo del programma -->
	        <span class="application_title">GS <i><span class="application_title_on_rails">on Rails</span></i></span>
			<!-- Titolo della pagina -->
	        <% if show_title? %>
				<div id="function_title">
					<%= link_to image_tag('/images/back.gif', :title => 'Indietro', :border=>0), :back if params[:action] == 'show' %>
					<div><%= @content_for_title %></div>
				</div>
			<% end %>

			<!-- Informazioni di account e link di uscita -->
	        <% if @current_user %>
		        <div id="user_info">
		            Sei autenticato come <b><%= @current_user.user_name %></b>
		            |<%= link_to "Esci", logout_url %>
		        </div>
	        <% end %>
	    </div>
    	<%= tag('div', {:id => 'main', :class => (has_content?(:sidebar) ? '' : 'nosidebar')}, true) %>
	    
		<!-- SIDEBAR -->
		<div id="sidebar" class="sidebar_opened <%= sidebar_bg_class %>">
	        <span class="sidebar_tools"><span title="Collassa tutti i blocchi",  class="collapse_all">&nbsp;&nbsp;&nbsp;</span><span title="Espandi tutti i blocchi",  class="expand_all">&nbsp;&nbsp;&nbsp;</span></span>
	        <span title="Nascondi la barra degli strumenti",  class="sidebar_toggler hide_sidebar">&nbsp;&nbsp;&nbsp;</span>
	        <div id="flash_messages">
	            <% unless (flash[:notice].blank? and flash[:error].blank?) %>
		            <% flash.each do |name, msg| %>
			            <%= content_tag :div, msg, :id => "flash_#{name}" %>
		            <% end %>
	            <% end %>
	        </div>
	        <div class="dynamic_sidebar_content">
	            <%= yield :sidebar %>
	        </div>
	    </div>

		<!-- CONTENT -->
	    <div id="content"><%= yield :layout %></div>

	    <!-- DOCK MENU -->
		<%= raw(dock_menu) if @current_user %>
    </div>

	<!-- FOOTER -->
    <div id="footer">
        Powered by GS on Rails Â© 2010 <%= mail_to("asalicetti@kion.it", "Andrea Salicetti", :encode => "javascript").html_safe %>
    </div>
</body>
</html>
