<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= @content_for_title || "GS on Rails" %></title>

	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'jquery.event.drag-1.5.min' %>
	<%= javascript_include_tag 'jquery.event.drop-1.1' %>
	<%= javascript_include_tag 'jquery-1.4.2.min' %>
	<%= javascript_include_tag 'jquery-ui-1.8.1.custom.min' %>
	<%= javascript_include_tag 'MacStyleDock.compressed' %>

    <%= stylesheet_link_tag 'application' %>
	<%= stylesheet_link_tag 'button' %>
    <%= stylesheet_link_tag 'gs' %>
    <%= stylesheet_link_tag 'menu' %>
    <%= stylesheet_link_tag 'jquery-ui-1.8.1.custom' %>

	<%= csrf_meta_tag %>
	<%= yield(:head) %>
  </head>
  <body>
		<div id="banner">
			<%= image_tag 'gs_on_rails.png', :class => 'title' %>

			<% if @current_user %>

				<%# form_for @funzione, {:class => 'menu_funzioni'} do %>
					<%#= hidden_field_tag :fn_name %>
					<%#= dropdown_tags @funzione.fn_name, 'Scegli la funzione', %w(Category Status Amount-High Amount-Low), {:id => 'fn'} %>
				<%# end %>

				<div id="user_info">
					Sei autenticato come <b><%= @current_user.user_name %></b> |
					<%= link_to "Esci", logout_url %>
				</div>
			<% end %>
			<% if show_title? %>
				<div id="function_title"><%= @content_for_title %></div>
			<% end %>
		</div>
		<%= tag('div', {:id => 'main', :class => (has_content?(:sidebar) ? '' : 'nosidebar')}, true) %>
		<div id="sidebar" class="sidebar_opened <%= sidebar_bg_class %>">
			<span class="sidebar_tools">
				<span title="Collassa tutti i blocchi", class="collapse_all">&nbsp;&nbsp;&nbsp;</span>
				<span title="Espandi tutti i blocchi", class="expand_all">&nbsp;&nbsp;&nbsp;</span>
			</span>
			<span title="Nascondi la barra degli strumenti", class="sidebar_toggler hide_sidebar">&nbsp;&nbsp;&nbsp;</span>
			<% unless (flash[:notice].blank? and flash[:error].blank?) %>
				<div id="flash_messages">
					<% flash.each do |name, msg| %>
						<%= content_tag :div, msg, :id => "flash_#{name}"%>
					<% end %>
				</div>
			<% end %>
			<div class="dynamic_sidebar_content">
				<%= yield :sidebar %>
			</div>
		</div>

		<div id="content">
			<%= yield :layout %>
		</div>
	</div>
	
	<div id="footer">Powered by GS on Rails Â© 2010 <%= mail_to("asalicetti@kion.it", "Andrea Salicetti", :encode => "javascript").html_safe %>
		<div id="dock"></div>
	</div>
	</body>
</html>
