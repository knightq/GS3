<% 
	body_class ||= 'collapsible_box_body_default'
	closeable &&= true
	envelope_class ||= ""
	head_class ||=  'collapsible_box_head_default'
	title ||= ''
	p_locals ||= Hash.new
%>

<div class="collapsible_box_envelope_default <%= envelope_class %>">
	<div class="<%= head_class %> collapse_btn bubbleInfo" align="center">
		<b><%= title %></b>
		<% if closeable %>
			<table id="dpop" class="popup">
	    	<tbody>
					<tr>
			  		<td id="topleft" class="corner"></td><td class="top"></td><td id="topright" class="corner"></td>
			  	</tr>

			  	<tr>
			  		<td class="left"></td><td style="padding:0;"><span class="popup-contents">Rimuovi questa sezione</span></td><td class="right"></td>
			  	</tr>

			  	<tr>
			  		<td class="corner" id="bottomleft"></td><td class="bottom"><img width="30" height="29" alt="popup tail" src="images/bubble-tail2.png"/></td><td id="bottomright" class="corner"></td>
			  	</tr>
		    </tbody>
			</table>
			<%= image_tag "../images/close.gif", :class => "hide_btn trigger help-context", :alt => "Chiudi", :helpId => "collapsible.close" %>
			<!--<span class="hide_btn trigger help-context ui-icon ui-widget-content ui-icon-close" alt ="Chiudi" helpId="collapsible.close"></span>-->
		<% end %>
	</div>
	<div class="<%= body_class %> collapsible">
		<%= render :partial => content, :locals => p_locals %>
	</div>
</div>
